<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disable state. -->
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" android:topLeftRadius="100dp" android:topRightRadius="100dp" />
            <stroke android:width="1dp" android:color="#999999" />
            <gradient android:angle="270" android:endColor="#fefefe" android:startColor="#0077c2" />
            <size android:width="@dimen/pad_width" android:height="@dimen/pad_height" />
        </shape>
    </item>

    <!--released state. -->
    <item android:state_pressed="false" >
        <shape  xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" android:topLeftRadius="100dp" android:topRightRadius="100dp" />
            <stroke android:width="1dp" android:color="#999999" />
            <gradient android:angle="270" android:endColor="#fefefe" android:startColor="#80d6ff" />
            <size android:width="@dimen/pad_width" android:height="@dimen/pad_height" />
        </shape>
    </item>

    <!--pressed state. -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp" android:topLeftRadius="100dp" android:topRightRadius="100dp" />
            <stroke android:width="1dp" android:color="#999999" />
            <gradient android:endColor="#fefefe" android:startColor="#80d6ff" />
            <size android:width="@dimen/pad_width" android:height="@dimen/pad_height" />
        </shape>
    </item>
</selector>